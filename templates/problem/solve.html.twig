{#
/**
  * @file
  * Template for Problem solution submitting page.
  *
  * Available variables:
  * - current_route: Name of current route.
  * - current_path: Current URL (Path).
  * - current_locale: Current language code.
  * - problem: Problem entity.
  */
#}
{% extends 'problem/layout.html.twig' %}

{% block title %}{{ problem.title }}{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.5/ace.js" type="text/javascript"
            charset="utf-8"></script>

    <script src="{{ asset('js/compiler-properties.js') }}" type="text/javascript" charset="utf-8"></script>
    <script src="{{ asset('js/problem.js') }}" type="text/javascript" charset="utf-8"></script>
{% endblock %}

{% block problem_body %}
    <div class="header-section text-center">
        <h2>{{ 'submit_problem_solution'|trans }}</h2>
        <p>{{ 'submit_problem_solution_description'|trans }}</p>
        <hr class="bottom-line">
    </div>

<div class="col-sm-12">
    <div class="text-center">
        <p><b>{{ 'problem'|trans }}</b>: {{ problem.title }}</p>
    </div>

    <div class="col-sm-12" id="compiler-loader" hidden>
        <div class="text-center">
            <ul class="bokeh">
                <li></li>
                <li></li>
                <li></li>
            </ul>
            <br/>
        </div>
    </div>
    <form name="submit-problem-solution-form" action="{{ path('submit_problem_solution', { id: problem.id }) }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('submit-problem-solution') }}"/>
        <div class="col-md-4 col-sm-6">
            <div class="form-group">
                <label for="compiler-language">{{ 'select_language'|trans }}</label>
                <select class="form-control" name="compiler-language" id="compiler-language"></select>
            </div>
        </div>
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <label for="code-editor">{{ 'write_code'|trans }}</label>
                <pre id="code-editor" style="height: 495px;"></pre>
            </div>
        </div>
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <input type="button" class="btn btn-success" value="{{ 'submit_solution'|trans }}" id="problem-solution-form-submit">
            </div>
        </div>
    </form>
</div>
{% endblock %}
