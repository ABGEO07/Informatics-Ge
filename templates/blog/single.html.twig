{#
/**
  * @file
  * Single blog page.
  *
  * Available variables:
  * - current_route: Name of current route.
  * - current_path: Current URL (Path).
  * - current_locale: Current language code.
  * - blog: Single blog object
  */
#}
{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="header-section text-center">
            <h1 class="mt-4">{{ blog.title }}</h1>
            <div>
                <i class="fa fa-user">&nbsp;<a href="#">{{ blog.author }}</a></i> |
                <i class="fa fa-calendar">&nbsp;{{ blog.createdOn|date('d/m/Y H:i') }}</i>

                <br/>

                {% if blog.tags is not empty %}
                    {% set tagStyles = [
                        'default',
                        'primary',
                        'success',
                        'info',
                        'warning',
                        'danger',
                    ] %}

                    <p>
                        {{ 'tags'|trans }}:
                        {% for tag in blog.tags|split(',') %}
                            <span class="label label-{{ random(tagStyles) }}">{{ tag|trim }}</span>
                        {% endfor %}
                    </p>
                {% endif %}

            </div>
            <hr class="bottom-line">
        </div>

        <!-- Blog -->
        <div class="col-lg-8">
            <div class="col-lg-12">
                {{ blog.body|raw }}
            </div>

            <!-- FB Buttons -->
            <div class="col-sm-12">
                <div class="col-sm-12">
                    <br/>
                    <div class="fb-save"
                         data-uri="{{ current_path }}"
                         data-size="large"></div>
                    <br/><br/>
                </div>

                <div class="col-sm-12">
                    <div class="fb-like"
                         data-href="{{ current_path }}"
                         data-layout="standard"
                         data-action="like"
                         data-size="small"
                         data-show-faces="true"
                         data-share="true"></div>
                </div>
            </div>
            <!--/ FB Buttons -->

            <div class="col-md-12">
                <hr/>
                <h2>{{ 'comments'|trans }}</h2>
                <div
                        class="fb-comments"
                        data-href="{{ current_path }}"
                        data-numposts="5"
                        width="100%">
                </div>
            </div>
        </div>
        <!--/ Blog -->

        <!-- Sidebar -->
        <div class="col-md-4">
            {% include 'layouts/sidebar.html.twig' %}
        </div>
        <!--/ Sidebar -->
    </div>
{% endblock %}
