{#
/**
  * @file
  * Template for Compiler page.
  *
  * Available variables:
  * - current_route: Name of current route.
  * - current_path: Current URL (Path).
  * - current_locale: Current language code.
  */
#}
{% extends 'base.html.twig' %}

{% block title %}{{ 'compiler'|trans }}{% endblock %}

{% block styles %}
    {{ parent() }}

    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.5/ace.js" type="text/javascript"
            charset="utf-8"></script>

    <script>
        const compilerTranslations = {
            'error': '{{ 'error'|trans }}',
            'invalid-token': '{{ 'invalid_token'|trans }}',
            'invalid-compiler': '{{ 'invalid_compiler'|trans }}'
        }
    </script>

    <script src="{{ asset('js/compiler.js') }}" type="text/javascript" charset="utf-8"></script>
{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="header-section text-center">
            <h2>{{ 'compiler'|trans }}</h2>
            <p>{{ 'compiler_description'|trans }}</p>
            {#<p>კომპილატორის მეშვეობით შეგიძლიათ გაუშვათ თქვენი კოდი და იხილოთ მისი მუშაობის შედეგი.</p>#}
            <hr class="bottom-line">
        </div>

        <div class="col-md-12">
            <div class="col-sm-12" id="compiler-loader" hidden>
                <div class="text-center">
                    <ul class="bokeh">
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                    <br/>
                </div>
            </div>
            <form name="compiler-form" action="{{ path('compiler_compile') }}" method="post">
                <input type="hidden" name="_token" value="{{ csrf_token('compiler-compile-code') }}"/>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="compiler-language">{{ 'select_language'|trans }}</label>
                            <select class="form-control" name="compiler-language" id="compiler-language"></select>
                        </div>
                        <div class="form-group">
                            <label for="code-editor">{{ 'write_code'|trans }}</label>
                            <pre id="code-editor" style="height: 495px;"></pre>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="input-data">{{ 'input_data'|trans }}</label>
                            <pre id="input-data" style="height: 265px;"></pre>
                        </div>
                        <div class="form-group">
                            <label for="output-data">{{ 'output_data'|trans }}</label>
                            <pre id="output-data" style="height: 265px;"></pre>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="button" class="btn btn-success" value="{{ 'compile_code'|trans }}" id="compiler-form-submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
